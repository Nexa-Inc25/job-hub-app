ORACLE_EAM_BASE_URL=
ORACLE_EAM_CLIENT_ID=
ORACLE_EAM_CLIENT_SECRET=

# ============================================
# ORACLE PRIMAVERA P6
# ============================================
# Status: Beta/Preview - Returns mock responses if not configured

P6_BASE_URL=
P6_CLIENT_ID=
P6_CLIENT_SECRET=
P6_DATABASE_ID=1

# ============================================
# ORACLE ENDPOINTS (for As-Built routing)
