# FieldLedger Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# CORE CONFIGURATION
# ============================================

# Server
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ============================================
# DATABASE
# ============================================

# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/fieldledger?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fieldledger?retryWrites=true&w=majority

# ============================================
# AUTHENTICATION
# ============================================

# JWT Secret (minimum 32 characters in production)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars

# ============================================
# CLOUDFLARE R2 STORAGE
# ============================================

R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=fieldledger-uploads
R2_PUBLIC_URL=https://your-worker.workers.dev
R2_ARCHIVE_BUCKET=fieldledger-archive

# ============================================
# AI SERVICES
# ============================================

# OpenAI API Key (for document extraction, voice AI, etc.)
OPENAI_API_KEY=sk-...

# ============================================
# WEATHER API
# ============================================

# OpenWeatherMap API Key (for auto-weather on tailboards)
OPENWEATHER_API_KEY=

# ============================================
# STRIPE PAYMENTS
# ============================================

STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs
STRIPE_STARTER_MONTHLY_PRICE_ID=price_...
STRIPE_STARTER_YEARLY_PRICE_ID=price_...
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_...
STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_...

# ============================================
# EMAIL SERVICE
# ============================================

EMAIL_FROM=noreply@fieldledger.io
RESEND_API_KEY=

# Email routing for As-Built sections (comma-separated)
EMAIL_MAPPING_DEPT=mapping@utility.com
EMAIL_DO_DEPT=district-office@utility.com
EMAIL_PERMITS_DEPT=permits@utility.com
EMAIL_COMPLIANCE_DEPT=compliance@utility.com
EMAIL_ESTIMATING_DEPT=estimating@utility.com

# ============================================
# ORACLE PRIMAVERA UNIFIER
# ============================================
# Status: Beta/Preview - Returns mock responses if not configured

UNIFIER_BASE_URL=
UNIFIER_CLIENT_ID=
UNIFIER_CLIENT_SECRET=
UNIFIER_COMPANY_ID=

# ============================================
# ORACLE ENTERPRISE ASSET MANAGEMENT (EAM)
# ============================================
