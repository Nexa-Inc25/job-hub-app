# Used by AsBuiltRouter OracleAdapter
# Leave empty to run in mock mode

ORACLE_PPM_ENDPOINT=
ORACLE_EAM_ENDPOINT=
ORACLE_PAYABLES_ENDPOINT=

# ============================================
# SHAREPOINT INTEGRATION
# ============================================

SHAREPOINT_DO_SITE=
