# ============================================
# FieldLedger Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# REQUIRED - App won't start without these
# ============================================

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fieldledger?retryWrites=true&w=majority

# JWT secret for authentication (generate a random 64+ char string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# OPTIONAL - Defaults provided
# ============================================

# Server port (Railway sets this automatically)
PORT=5000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Node environment
NODE_ENV=development

# ============================================
# CLOUDFLARE R2 STORAGE (for file uploads)
# ============================================

R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=fieldledger-files
R2_PUBLIC_URL=https://your-worker.workers.dev

# ============================================
# EMAIL (for notifications)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@fieldledger.io

# ============================================
# ORACLE INTEGRATION (optional, for AP export)
# ============================================

# ORACLE_TENANT_URL=https://xxx.oraclecloud.com
# ORACLE_CLIENT_ID=your-client-id
# ORACLE_CLIENT_SECRET=your-secret
# ORACLE_SUPPLIER_ID=123456

# ============================================
# MFA / SECURITY (optional)
# ============================================

# MFA_ISSUER=FieldLedger
# SESSION_TIMEOUT_MINUTES=30

# ============================================
# ORACLE PRIMAVERA UNIFIER
# ============================================

# UNIFIER_BASE_URL=https://your-tenant.oraclecloud.com/unifier
# UNIFIER_CLIENT_ID=your-client-id
# UNIFIER_CLIENT_SECRET=your-client-secret
# UNIFIER_COMPANY_ID=your-company-id

# ============================================
# ORACLE ENTERPRISE ASSET MANAGEMENT (EAM)
# ============================================

# ORACLE_EAM_BASE_URL=https://your-tenant.oraclecloud.com
# ORACLE_EAM_CLIENT_ID=your-client-id
# ORACLE_EAM_CLIENT_SECRET=your-client-secret

# ============================================
# ORACLE PRIMAVERA P6 EPPM
# ============================================

# P6_BASE_URL=https://your-p6-cloud.oraclecloud.com
# P6_CLIENT_ID=your-client-id
# P6_CLIENT_SECRET=your-client-secret
# P6_DATABASE_ID=1

# ============================================
# ERROR MONITORING (Sentry)
# ============================================
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
# SECURITY_ALERT_EMAIL=security@fieldledger.io
