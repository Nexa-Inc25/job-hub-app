    "qrcode": "^1.5.3",
    "redis": "^4.6.13",
    "resend": "^6.9.2",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.2",
    "stripe": "^20.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
